<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <welcome-file-list>
        <welcome-file>Login.html</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>logservlet</servlet-name>
        <servlet-class>controller.logservlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DisplayServlet</servlet-name>
        <servlet-class>DisplayServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginHiber</servlet-name>
        <servlet-class>controller.LoginHiber</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Buses</servlet-name>
        <servlet-class>controller.BusesServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BusInfoServlet</servlet-name>
        <servlet-class>controller.BusInfoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RoutesServlet</servlet-name>
        <servlet-class>controller.RoutesServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteServlet</servlet-name>
        <servlet-class>controller.DeleteServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletLogin</servlet-name>
        <servlet-class>controller.ServletLogin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserServlet</servlet-name>
        <servlet-class>controller.UserServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteUserServlet</servlet-name>
        <servlet-class>controller.DeleteUserServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserServletLogin</servlet-name>
        <servlet-class>controller.UserServletLogin</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>logservlet</servlet-name>
        <url-pattern>/logservlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DisplayServlet</servlet-name>
        <url-pattern>/DisplayServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginHiber</servlet-name>
        <url-pattern>/LoginHiber</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Buses</servlet-name>
        <url-pattern>/Buses</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BusInfoServlet</servlet-name>
        <url-pattern>/BusInfoServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RoutesServlet</servlet-name>
        <url-pattern>/RoutesServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteServlet</servlet-name>
        <url-pattern>/DeleteServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletLogin</servlet-name>
        <url-pattern>/ServletLogin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/UserServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteUserServlet</servlet-name>
        <url-pattern>/DeleteUserServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserServletLogin</servlet-name>
        <url-pattern>/UserServletLogin</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
